<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="hackupc.gatech.hackaccessibility.ViewPost"
    tools:showIn="@layout/activity_view_post">

    <com.google.android.gms.maps.MapView
        xmlns:map="http://schemas.android.com/apk/res-auto"

        android:id="@+id/mapSnapshot"
        android:layout_weight="30"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="@dimen/item_below_margin"
        android:apiKey="@string/google_maps_key"
        map:cameraZoom="15"
        map:mapType="normal"
        map:liteMode="true" />

    <RelativeLayout
        android:layout_weight="70"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/tvViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Title"
            android:paddingRight="@dimen/item_edittext_margin"
            android:paddingBottom="@dimen/item_below_margin"
            android:text="Title:"
            />

        <TextView
            android:id="@+id/tvViewCategory"
            android:layout_below="@+id/tvViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Headline"
            android:paddingRight="@dimen/item_edittext_margin"
            android:paddingBottom="@dimen/item_below_margin"
            android:text="Category:"
            />

        <TextView
            android:id="@+id/tvViewDescription"
            android:layout_below="@+id/tvViewCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Body1"
            android:paddingRight="@dimen/item_edittext_margin"
            android:text="Description:"
            />

        <LinearLayout
            android:weightSum="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>

